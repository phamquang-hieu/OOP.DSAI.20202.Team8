<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.media.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="selectionsort.SelectionSortController">
   <bottom>
      <ToolBar prefHeight="92.0" prefWidth="1100.0" BorderPane.alignment="CENTER">
        <items>
            <TextField prefHeight="15.0" prefWidth="296.0" promptText="Please input an array (optional)" />
          <Button fx:id="btnRun" mnemonicParsing="false" onAction="#btnRunPressed" text="Run" />
            <Button fx:id="btnNext" mnemonicParsing="false" onAction="#btnNextPressed" text="Next" />
            <TextField fx:id="progressField" prefHeight="62.0" prefWidth="531.0" />
        </items>
      </ToolBar>
   </bottom>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TitledPane animated="false" text="Create Array">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <RadioButton mnemonicParsing="false" selected="true" text="Randomize">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="createArray" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Customize" toggleGroup="$createArray">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </RadioButton>
                     </children>
                  </VBox>
               </content>
               <VBox.margin>
                  <Insets left="10.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TitledPane>
            <TitledPane animated="false" prefHeight="210.0" prefWidth="97.0" text="Array size">
               <VBox.margin>
                  <Insets left="10.0" right="20.0" top="10.0" />
               </VBox.margin>
               <content>
                  <VBox prefHeight="186.0" prefWidth="145.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="5">
                           <toggleGroup>
                              <ToggleGroup fx:id="arraySize" />
                           </toggleGroup>
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </RadioButton>
                        <RadioButton layoutX="20.0" layoutY="20.0" mnemonicParsing="false" text="6" toggleGroup="$arraySize">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin></RadioButton>
                        <RadioButton layoutX="20.0" layoutY="37.0" mnemonicParsing="false" text="7" toggleGroup="$arraySize">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin></RadioButton>
                        <RadioButton layoutX="20.0" layoutY="54.0" mnemonicParsing="false" selected="true" text="8" toggleGroup="$arraySize">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin></RadioButton>
                     </children>
                  </VBox>
               </content>
            </TitledPane>
         </children>
      </VBox>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Back">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <Pane fx:id="arrayDisplayArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane layoutX="144.0" layoutY="72.0" prefHeight="150.0" prefWidth="200.0" />
         </children>
      </Pane>
   </center>
</BorderPane>
